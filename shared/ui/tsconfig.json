{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["dom", "dom.iterable", "ES2020"],
    "outDir": "./dist",
    "rootDir": ".",
    "declaration": true,
    "declarationMap": true,
    "composite": true,
    "incremental": true,
    "jsx": "react-jsx",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "noEmit": false,
    "baseUrl": ".",
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "paths": {
      "@/*": ["./design-system/*"],
      "@/components/ui/*": ["./design-system/components/ui/*"],
      "@/hooks/*": ["./design-system/hooks/*"],
      "@/lib/*": ["./design-system/lib/*"],
      "@platform/ui/utils": ["./design-system/lib/utils"],
      "@platform/ui/design-system": ["./design-system"],
      "@irc/ui/utils": ["./design-system/lib/utils"],
      "@irc/ui/design-system": ["./design-system"],
      "@irc/db/*": ["../db/*"],
      "components/*": ["./design-system/components/*"],
      "tokens/*": ["./design-system/tokens/*"]
    }
  },
  "include": [
    "design-system/**/*",
    "utils.ts",
    "utils/**/*",
    "core/**/*",
    "atoms/**/*",
    "molecules/**/*",
    "organisms/**/*",
    "templates/**/*",
    "hooks/**/*",
    "components/**/*",
    "constants/**/*",
    "types/**/*.d.ts",
    "index.ts"
  ],
  "exclude": [
    "dist",
    "node_modules",
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/*.stories.ts",
    "**/*.stories.tsx",
    ".storybook",
    "design-system/app/**/*",
    "design-system/examples/**/*"
  ],
  "references": []
}
